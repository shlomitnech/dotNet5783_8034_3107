<Window x:Class="PL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Close" Content="OK" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Click="Close_Click" Height="73" Width="250" FontSize="22"/>
        <TextBox x:Name ="ErrorProblem" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="550" Height="47" FontSize="36" Foreground="#FFC50101" FontFamily="Aharoni" TextChanged="ErrorProblem_TextChanged"/>
        <TextBox x:Name ="ErrorText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="338" Height="127" FontSize="16" Margin="0,174,0,0" TextChanged="ErrorText_TextChanged"/>

    </Grid>
</Window>
