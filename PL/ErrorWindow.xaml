<Window x:Class="PL.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">

    <Border Padding="10" Background="#eee">

        <StackPanel>
            <TextBox Name="ErrorTitle" Background="LightGray" FontSize="25" FontWeight="Bold" BorderThickness="4"
                     BorderBrush="#f00" TextAlignment="Center"/>
            <Image Name="ErrorImage" Margin="200,20,200,0" Height="150"/>
            <TextBox Name="ErrorDetails" Background="Transparent" FontSize="22" Margin="50,20,50,20" TextAlignment="Center"/>
            <Button x:Name="OKBtn" Background="LightGray" FontSize="25" Width="100" Height="50" Content="OK"
                    FontWeight="DemiBold" BorderBrush="Transparent" Click="OKBtn_Click" />

        </StackPanel>
    </Border>


</Window>
