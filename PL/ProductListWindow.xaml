<Window x:Class="PL.ProductListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductListWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid Name="MainGrid" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="391*"/>
                <ColumnDefinition Width="398*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="383*"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Margin="0,0,0,19" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="229*"/>
                    <ColumnDefinition Width="560*"/>
                </Grid.ColumnDefinitions >
                <ComboBox Name="CategorySelector" VerticalAlignment="Center" Height="62" Margin="208,0,0,0" SelectionChanged="CategorySelector_SelectionChanged" Grid.ColumnSpan="2" />
                <Label Name="Description" Content="Select Category:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" FontWeight="Bold" FontSize="20" Width="203"
                   Background="#FFCECECE" FontStyle="Italic" Height="52" HorizontalContentAlignment="Center"/>
            </Grid>
            <ListView x:Name="ProductsListView" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ProductsListView_SelectionChanged" Margin="0,3,398,0" MouseDoubleClick="DoubleClickEvent" SelectedItem="" Grid.Row="1" Grid.ColumnSpan="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Add" HorizontalAlignment="Left" Margin="10,242,0,0" Grid.Row="1" VerticalAlignment="Top" Height="67" Width="278" FontSize="48" FontFamily="Cascadia Code SemiBold" Background="#FFF2F800" Click="Button_Click"/>
        </Grid>

    </Grid>
</Window>

    